#!/usr/bin/env bash

set -euo pipefail

usage() {
	local fd="${1:-2}"
	cat <<EOF >&"$fd"
Usage: go-test-build

Build the Go test code without running the tests.

Examples:
  go-test-build
EOF
}

main() {
	if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
		usage 1
		return 0
	fi

	if ! command -v go >/dev/null 2>&1; then
		echo "Error: go is not installed" >&2
		return 1
	fi

	go test -run=^$ ./... 1>/dev/null
}

main "$@"
