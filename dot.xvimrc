set ignorecase
set smartcase
set incsearch
set hlsearch
set showmatch matchtime=1
set cmdheight=2
set laststatus=2
set showcmd
set nofoldenable
set display=lastline
set listchars=tab:>.,trail:_,extends:>,precedes:< 
set clipboard+=unnamed
set showmatch

