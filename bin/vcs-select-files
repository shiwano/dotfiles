#!/usr/bin/env bash

set -euo pipefail

usage() {
	local fd="${1:-2}"
	cat <<EOF >&"$fd"
Usage: vcs-select-files [dir]

Interactively select files tracked by version control (Git or jj).

Examples:
  vcs-select-files
  vcs-select-files src
EOF
}

main() {
	if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
		usage 1
		return 0
	fi

	local dir="${1:-.}"
	local prompt="${FZF_PROMPT:-Select> }"

	local files
	if jj root >/dev/null 2>&1; then
		files="$(jj file list "$dir" 2>/dev/null || true)"
	else
		files="$(git ls-files "$dir")"
	fi
	[ -z "$files" ] && return 0

	local selected
	selected="$(echo "$files" | fzf -m --prompt "$prompt")"
	[ -z "$selected" ] && return 0

	echo "$selected"
}

main "$@"
