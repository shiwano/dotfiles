#!/usr/bin/env bash

set -euo pipefail

usage() {
	local fd="${1:-2}"
	cat <<EOF >&"$fd"
Usage: vcs-select-repo

Interactively select a repository and print its absolute path.

Examples:
  vcs-select-repo | { read -r s && [ -n "\$s" ] && cd "\$s"; }
EOF
}

main() {
	if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
		usage 1
		return 0
	fi

	local prompt="${FZF_PROMPT:-Select> }"

	local items selected path
	items="$(
		echo 'dotfiles'
		ghq list
	)"
	[ -z "$items" ] && return 0

	selected="$(echo -e "$items" | fzf --preview '' --prompt "$prompt")"
	[ -z "$selected" ] && return 0

	if [[ "$selected" == "dotfiles" ]]; then
		path="$HOME/dotfiles"
	else
		path="$(ghq root)/$selected"
	fi

	echo "$path"
}

main "$@"
