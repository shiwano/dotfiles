#!/usr/bin/env bash

set -euo pipefail

usage() {
	local fd="${1:-2}"
	cat <<EOF >&"$fd"
Usage: select-files [dir]

Interactively select files.

Examples:
  select-files
  select-files src
EOF
}

main() {
	if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
		usage 1
		return 0
	fi

	local dir="${1:-.}"
	local prompt="${FZF_PROMPT:-Select> }"

	local files
	files="$(rg --files --hidden --follow --sort path -g '!**/.git' "$dir" 2>/dev/null || true)"
	[ -z "$files" ] && return 0

	local selected
	selected="$(echo "$files" | fzf -m --prompt "$prompt")"
	[ -z "$selected" ] && return 0

	echo "$selected"
}

main "$@"
