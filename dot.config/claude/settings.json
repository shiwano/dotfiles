{
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "WebFetch",
      "WebSearch",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Bash(make test:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go list:*)",
      "Bash(go vet:*)",
      "Bash(go doc:*)",
      "Bash(go mod graph:*)",
      "Bash(go mod tidy:*)",
      "Bash(go mod why:*)",
      "Bash(goimports:*)",
      "Bash(golangci-lint:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run test:*)",
      "Bash(flutter analyze:*)",
      "Bash(flutter test:*)",
      "Bash(flutter pub deps:*)",
      "Bash(cargo test:*)",
      "Bash(pytest:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git diff:*)",
      "Bash(git grep:*)",
      "Bash(git ls-files:*)",
      "Bash(git status:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(gh-pr-comments:*)",
      "Bash(shfmt -d:*)"
    ],
    "deny": [
      "Bash(sh:*)",
      "Bash(bash:*)",
      "Bash(zsh:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(chown -R:*)",
      "Bash(rm -rf:*)",
      "Bash(mv /*:*)",
      "Bash(cd /*:*)",
      "Bash(> /dev/sda:*)",
      "Bash(source:*)",
      "Bash(git branch -D:*)",
      "Bash(git branch -d:*)",
      "Bash(git push:*)",
      "Bash(gh:*)",
      "Bash(docker push:*)",
      "Bash(npm publish:*)",
      "Bash(brew:*)",
      "Bash(mise:*)",
      "Bash(deactivate:*)",
      "Read(.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/secrets/**)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-hook-notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-hook-stop"
          }
        ]
      }
    ]
  },
  "outputStyle": "custom",
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  }
}
