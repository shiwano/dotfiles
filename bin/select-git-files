#!/usr/bin/env bash

set -euo pipefail

usage() {
	local fd="${1:-2}"
	cat <<EOF >&$fd
Usage: select-git-files [dir]

Interactively select files tracked by Git.

Examples:
  select-git-files
  select-git-files src
EOF
}

main() {
	if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
		usage 1
		return 0
	fi

	local dir="${1:-.}"
	local prompt="${FZF_PROMPT:-Select> }"

	local files
	files="$(git ls-files "$dir")"
	[ -z "$files" ] && return 0

	local selected
	selected="$(echo "$files" | fzf -m --prompt "$prompt")"
	[ -z "$selected" ] && return 0

	echo "$selected"
}

main "$@"
